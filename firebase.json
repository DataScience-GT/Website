{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "**/AtlMap",
        "destination": "https://atlcrime.datasciencegt.org",
        "type": 302
      },
      {
        "source": "**/AtlCrime",
        "destination": "https://atlcrime.datasciencegt.org",
        "type": 302
      }
    ], 
    "rewrites": [
      {
        "source": "**/paid_account", 
        "function": "paid_account"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
